{
  "name": "puggle",
  "version": "0.2.0-beta.5",
  "description": "A CLI for bootstrapping and keeping project config up-to-date",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "robb-j/puggle",
  "author": "Rob Anderson (https://r0b.io)",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "npx tsc --noEmit",
    "test": "jest",
    "coverage": "jest --coverage",
    "preversion": "npm test -s && npm run readme-toc && npm run build && git add README.md",
    "readme-toc": "md-toc -i",
    "prettier": "prettier --write '**/*.{js,ts,tsx,json,css,md}'",
    "start": "node dist/cli.js",
    "dev": "node -r ts-node/register src/cli.ts"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "puggle": "./dist/cli.js"
  },
  "keywords": [],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "casex": "^3.0.0",
    "chalk": "^2.4.2",
    "glob": "^7.1.3",
    "prompts": "^2.0.4",
    "semver": "^6.0.0",
    "yaml": "^1.5.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@robb_j/md-toc": "^0.3.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.12",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.set": "^4.3.6",
    "@types/node": "^11.13.9",
    "@types/prompts": "^1.2.0",
    "@types/semver": "^6.0.0",
    "@types/yaml": "^1.0.2",
    "@types/yargs": "^13.0.0",
    "coveralls": "^3.0.3",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.0",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
