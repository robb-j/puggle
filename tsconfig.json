{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "module": "ES2020",

    "sourceMap": true,
    "declaration": true,
    "newLine": "lf",
    "stripInternal": true,
    "pretty": true,

    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
